<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="4"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/result_view"
            android:text="@string/_0"
            android:layout_gravity="right"
            android:textSize="100px"
            android:textStyle="bold"
            android:layout_columnSpan="4">
        </TextView>

        <Button
            android:id="@+id/button_seven"
            android:text="@string/_7"
            android:textSize="50px" />
        <Button
            android:id="@+id/button_eight"
            android:text="@string/_8"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_nine"
            android:text="@string/_9"
            android:textSize="50px"/>
        <Button
            android:id="@+id/button_plus"
            android:text="@string/plus_sign"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_four"
            android:text="@string/_4"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_five"
            android:text="@string/_5"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_six"
            android:text="@string/_6"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_minus"
            android:text="@string/minus_sign"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_one"
            android:text="@string/_1"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_two"
            android:text="@string/_2"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_three"
            android:text="@string/_3"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_evaluate"
            android:text="@string/evaluate_sign"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_zero"
            android:text="@string/_0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_comma"
            android:text="@string/comma_sign"

            android:textSize="50px"/>

        <Button
            android:id="@+id/button_reset"
            android:text="@string/reset_sign"
            android:textSize="50px"/>

        <Button
            android:id="@+id/button_multiply"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiply_sign"
            android:textSize="50px" />

        <Button
            android:id="@+id/button_divide"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divide_sign"
            android:textSize="50px" />


</GridLayout>
